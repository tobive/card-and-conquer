{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "card-and-conquer",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "card-and-conquer",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Start a Battle",
        "description": "Create a new battle post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/battle-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "resolve-battles": {
        "cron": "*/5 * * * *",
        "endpoint": "/internal/scheduler/resolve-battles"
      },
      "update-leaderboard": {
        "cron": "*/15 * * * *",
        "endpoint": "/internal/scheduler/update-leaderboard"
      },
      "update-hall-of-fame": {
        "cron": "0 * * * *",
        "endpoint": "/internal/scheduler/update-hall-of-fame"
      }
    }
  }
}
